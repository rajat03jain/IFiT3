            android:text="Description:"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ahkahkahckahckjanckjahvcknajcna"/>
    </LinearLayout>

